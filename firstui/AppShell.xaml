<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="firstui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:firstui.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="firstui">

    <TabBar>

      <ShellContent
        Title="Home"
        Icon="hometab.svg"
        ContentTemplate="{DataTemplate pages:MainPage}"
        Route="MainPage" />
      <ShellContent
        Title="Games"
        Icon="game.svg"
        ContentTemplate="{DataTemplate pages:MainPage}"
        Route="MainPage1" />
      <ShellContent
          Title="New &amp; Hot"
          Icon="brand_netflix.svg"
          ContentTemplate="{DataTemplate pages:MainPage}"
          Route="MainPage2" />
      <ShellContent
          Title="Download"
          Icon="download.svg"
          ContentTemplate="{DataTemplate pages:MainPage}"
          Route="MainPage3" />  


    </TabBar>
</Shell>
